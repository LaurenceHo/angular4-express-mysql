<% include ../partials/header %>

	<div class = 'container'>
		<div class = 'row'>
			<h1 style = 'text-align: center'>Edit <%= campground.name %></h1>
			<div style = 'width:40%;margin: 25px auto;'>
				<form action='/campground/<%= campground.id %>?_method=PUT' method='POST'>
					<input class = 'hidden' value = '<%= currentUser.id %>' name = 'campground[user_id]'>
					<input class = 'hidden' value = '<%= currentUser.username %>' name = 'campground[username]'>

					<div class = 'form-group'>
						<input class = 'form-control' type = 'text' name = 'campground[name]' value = '<%= campground.name %>'>
					</div>
					<div class = 'form-group'>
						<input class = 'form-control' type = 'text' name = 'campground[image]' value = '<%= campground.image %>'>
					</div>
					<div class = 'form-group'>
						<textarea class = 'form-control' rows='8' name = 'campground[description]'><%= campground.description %></textarea>
					</div>
					<div class = 'form-group'>
						<button class = 'btn btn-lg btn-primary btn-block'>Submit</button>
					</div>
				</form>
				<a href = '/'>Go Back</a>
			</div>
		</div>
	</div>

<% include ../partials/footer %>
