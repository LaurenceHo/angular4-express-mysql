<% include ../partials/header %>

	<div class = 'container'>
		<div class = 'row'>
			<h1 style = 'text-align: center'>Add New Comment to <%= campground.name %> </h1>
			<div style = 'width:30% ; margin: 25px auto;'>
				<form action='/campground/<%= campground.id %>/comments' method='POST'>
					<div class = 'form-group'>
						<input class = 'hidden' value = '<%= campground.id %>' name = 'comment[campground_id]'>
						<input class = 'form-control' type = 'text' name = 'comment[author]' value = '<%= currentUser.username%>' readonly>
					</div>
					<div class = 'form-group'>
						<textarea class = 'form-control' name = 'comment[text]' rows="6" placeholder='comment'></textarea>
					</div>
					<div class = 'form-group'>
						<button class = 'btn btn-lg btn-primary btn-block'>Submit</button>
					</div>
				</form>
				<a href = '/campground'>Go Back</a>
			</div>
		</div>
	</div>

<% include ../partials/footer %>
